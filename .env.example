# Database
DATABASE_URL=jdbc:postgresql://localhost:5432/mirelplatform
DATABASE_USER=mirel
DATABASE_PASS=mirel
DATABASE_DRIVER=org.postgresql.Driver
DATABASE_PLATFORM=org.hibernate.dialect.PostgreSQLDialect

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Provider (azure | smtp)
EMAIL_PROVIDER=smtp

# Azure Communication Services (本番環境用)
AZURE_COMMUNICATION_CONNECTION_STRING=
AZURE_COMMUNICATION_EMAIL_FROM=noreply_mirel@vemi.jp

# SMTP Settings (開発環境用 - MailHog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=

# GitHub OAuth2
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# GitHub Models (Mira AI)
# `gh auth token` で取得可能
GITHUB_TOKEN=

# JWT
JWT_SECRET=your-256-bit-secret-key-change-this-in-production

# OTP Settings
OTP_ENABLED=true
OTP_LENGTH=6
OTP_EXPIRATION_MINUTES=5
OTP_MAX_ATTEMPTS=3
OTP_RESEND_COOLDOWN_SECONDS=60

# Rate Limiting
RATE_LIMIT_OTP_REQUEST_PER_MINUTE=3
RATE_LIMIT_OTP_VERIFY_PER_MINUTE=5
RATE_LIMIT_REDIS_FALLBACK_TO_MEMORY=true

# Application
APP_BASE_URL=http://localhost:5173
SERVER_PORT=3000
SPRING_PROFILES_ACTIVE=dev
