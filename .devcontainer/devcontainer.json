{
  "name": "Mirel Platform Dev",
  "image": "mcr.microsoft.com/devcontainers/java:21",
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "21",
      "jdkDistro": "microsoft"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest"
    }
  },
  "containerEnv": {
    "JAVA_HOME": "/usr/lib/jvm/msopenjdk-current",
    "GRADLE_USER_HOME": "/home/vscode/.gradle"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "java.configuration.runtimes": [
          {
            "name": "JavaSE-21",
            "path": "/usr/lib/jvm/msopenjdk-current",
            "default": true
          }
        ],
        "java.import.gradle.java.home": "/usr/lib/jvm/msopenjdk-current",
        "gradle.java.home": "/usr/lib/jvm/msopenjdk-current",
        "terminal.integrated.defaultProfile.linux": "bash",
        "java.configuration.updateBuildConfiguration": "automatic",
        "java.compile.nullAnalysis.mode": "automatic",
        "java.format.settings.url": ".vscode/java-formatter.xml",
        "java.format.settings.profile": "Eclipse",
        "[java]": {
          "editor.formatOnSave": true
        },
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.detectIndentation": false
      },
      "extensions": [
        "vscjava.vscode-java-pack",
        "vscjava.vscode-gradle",
        "redhat.vscode-xml",
        "gabrielbb.vscode-lombok",
        "oderwat.indent-rainbow"
      ]
    }
  },
  "remoteUser": "vscode",
  "forwardPorts": [8080],
  "postCreateCommand": "./gradlew --no-daemon build",
  "updateContentCommand": "./gradlew --no-daemon build",
  "runArgs": [
    "--env", "JAVA_HOME=/usr/lib/jvm/msopenjdk-current"
  ],
  "mounts": [
    "source=mirelplatform-gradle-cache,target=/home/vscode/.gradle,type=volume"
  ]
}
