{
  "name": "Mirel Platform Dev",
  "image": "mcr.microsoft.com/devcontainers/java:21",
  // Phase 3: Frontend + Backend simultaneous auto-startup
  // Backend: Spring Boot (port 3000) + H2 dev database
  // Frontend: Nuxt.js (port 8080) + Node.js 16 (Nuxt 2.14.9 互換)
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "21",
      "jdkDistro": "tem"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "nodeGlobalVersion": "16",
      "nvmVersion": "latest"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/git-lfs:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest"
    }
  },
  "containerEnv": {
    "GRADLE_USER_HOME": "/home/vscode/.gradle",
    "SPRING_PROFILES_ACTIVE": "dev"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "java.configuration.updateBuildConfiguration": "automatic",
        "java.compile.nullAnalysis.mode": "automatic",
        "java.format.settings.url": ".vscode/java-formatter.xml",
        "java.format.settings.profile": "Eclipse",
        "[java]": {
          "editor.formatOnSave": true
        },
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.detectIndentation": false
      },
      "extensions": [
        "vscjava.vscode-java-pack",
        "vscjava.vscode-gradle",
        "redhat.vscode-xml",
        "gabrielbb.vscode-lombok",
        "oderwat.indent-rainbow",
        "Vue.volar",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-typescript-next"
      ]
    }
  },
  "remoteUser": "vscode",
  "forwardPorts": [3000, 8080],
  "postCreateCommand": "sudo chown -R vscode:vscode /home/vscode/.gradle && ./gradlew --no-daemon build",
  "postStartCommand": "bash -c 'export PATH=\"/usr/lib/git-core:$PATH\" && SPRING_PROFILES_ACTIVE=dev SERVER_PORT=3000 nohup ./gradlew :backend:bootRun > backend.log 2>&1 & cd frontend && npm install && PORT=8080 nohup npm run dev > ../frontend.log 2>&1 &'",
  "updateContentCommand": "sudo chown -R vscode:vscode /home/vscode/.gradle && ./gradlew --no-daemon build",
  "runArgs": [
  ],
  "mounts": [
    "source=mirelplatform-gradle-cache,target=/home/vscode/.gradle,type=volume"
  ]
}
