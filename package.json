{
  "name": "mirelplatform-e2e",
  "version": "1.0.0",
  "description": "E2E testing infrastructure for ProMarker platform",
  "private": true,
  "scripts": {
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:codegen": "playwright codegen http://localhost:8080/mirel/mste",
    "test:e2e:validate": "node tests/e2e/validate-setup.js",
    "test:install": "playwright install",
    "test:install-deps": "playwright install-deps",
    "test:update-snapshots": "playwright test --update-snapshots"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.2",
    "@playwright/test": "^1.45.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
