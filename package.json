{
  "name": "mirelplatform",
  "version": "1.0.0",
  "description": "mirelplatform monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter frontend-v3 dev",
    "build": "pnpm --filter frontend-v3 build",
    "preview": "pnpm --filter frontend-v3 preview",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "test:e2e": "pnpm --filter e2e test",
    "test:e2e:ui": "pnpm --filter e2e test:ui",
    "test:e2e:report": "pnpm --filter e2e test:report"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "19",
        "react-dom": "19"
      }
    },
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "devDependencies": {
    "prettier": "^3.7.0"
  }
}
