{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start All Services",
      "type": "shell",
      "command": "./scripts/start-services.sh",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "JAVA_HOME": "${env:HOME}/.sdkman/candidates/java/current",
          "PATH": "${env:HOME}/.local/bin:${env:HOME}/.sdkman/candidates/java/current/bin:${env:HOME}/.nvm/versions/node/v22.20.0/bin:/mnt/d/apps/gradle/gradle-8.0.2/bin:${env:PATH}"
        }
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "起動状況を監視中",
          "endsPattern": "(全サービスが正常に起動しました|起動監視がタイムアウトしました)"
        }
      },
      "runOptions": {
        "instanceLimit": 1
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Stop All Services",
      "type": "shell",
      "command": "./scripts/stop-services.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      }
    },
    {
      "label": "Watch Logs",
      "type": "shell",
      "command": "./scripts/watch-logs.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "Backend: Start Spring Boot",
      "type": "shell",
      "command": "lsof -ti:3000 | xargs kill 2>/dev/null || true; set -a; [ -f .env ] && . .env; set +a; SPRING_PROFILES_ACTIVE=dev SERVER_PORT=3000 ./gradlew --console=plain :backend:bootRun",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "JAVA_HOME": "${env:HOME}/.sdkman/candidates/java/current",
          "PATH": "${env:HOME}/.local/bin:${env:HOME}/.sdkman/candidates/java/current/bin:${env:HOME}/.nvm/versions/node/v22.20.0/bin:/mnt/d/apps/gradle/gradle-8.0.2/bin:${env:PATH}"
        }
      },
      "isBackground": true,
      "problemMatcher": [],
      "runOptions": {
        "instanceLimit": 1
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Backend: Start WITHOUT Devtools",
      "type": "shell",
      "command": "lsof -ti:3000 | xargs kill 2>/dev/null || true; set -a; [ -f .env ] && . .env; set +a; SPRING_DEVTOOLS_RESTART_ENABLED=false SPRING_PROFILES_ACTIVE=dev SERVER_PORT=3000 ./gradlew --console=plain :backend:bootRun",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "JAVA_HOME": "${env:HOME}/.sdkman/candidates/java/current",
          "PATH": "${env:HOME}/.local/bin:${env:HOME}/.sdkman/candidates/java/current/bin:${env:HOME}/.nvm/versions/node/v22.20.0/bin:/mnt/d/apps/gradle/gradle-8.0.2/bin:${env:PATH}"
        }
      },
      "isBackground": true,
      "problemMatcher": [],
      "runOptions": {
        "instanceLimit": 1
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Backend: Start with CLEAN_INSERT",
      "type": "shell",
      "command": "lsof -ti:3000 | xargs kill 2>/dev/null || true; set -a; [ -f .env ] && . .env; set +a; SPRING_PROFILES_ACTIVE=dev SERVER_PORT=3000 ./gradlew --console=plain :backend:bootRun --args='--mirel.data.load-mode=CLEAN_INSERT'",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "JAVA_HOME": "${env:HOME}/.sdkman/candidates/java/current",
          "PATH": "${env:HOME}/.local/bin:${env:HOME}/.sdkman/candidates/java/current/bin:${env:HOME}/.nvm/versions/node/v22.20.0/bin:/mnt/d/apps/gradle/gradle-8.0.2/bin:${env:PATH}"
        }
      },
      "isBackground": true,
      "problemMatcher": [],
      "runOptions": {
        "instanceLimit": 1
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Backend: Start with UPSERT",
      "type": "shell",
      "command": "lsof -ti:3000 | xargs kill 2>/dev/null || true; set -a; [ -f .env ] && . .env; set +a; SPRING_PROFILES_ACTIVE=dev SERVER_PORT=3000 ./gradlew --console=plain :backend:bootRun --args='--mirel.data.load-mode=UPSERT'",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "JAVA_HOME": "${env:HOME}/.sdkman/candidates/java/current",
          "PATH": "${env:HOME}/.local/bin:${env:HOME}/.sdkman/candidates/java/current/bin:${env:HOME}/.nvm/versions/node/v22.20.0/bin:/mnt/d/apps/gradle/gradle-8.0.2/bin:${env:PATH}"
        }
      },
      "isBackground": true,
      "problemMatcher": [],
      "runOptions": {
        "instanceLimit": 1
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Frontend-v3: Start Vite",
      "type": "shell",
      "command": "lsof -ti:5173 | xargs kill 2>/dev/null || true; pnpm --filter frontend-v3 dev",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PATH": "${env:HOME}/.nvm/versions/node/v22.20.0/bin:${env:PATH}"
        }
      },
      "isBackground": true,
      "problemMatcher": [],
      "runOptions": {
        "instanceLimit": 1
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Frontend-v3: Preview",
      "type": "shell",
      "command": "lsof -ti:4173 | xargs kill 2>/dev/null || true; pnpm --filter frontend-v3 preview -- --host 0.0.0.0 --port 4173",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PATH": "${env:HOME}/.nvm/versions/node/v22.20.0/bin:${env:PATH}"
        }
      },
      "isBackground": true,
      "problemMatcher": [],
      "runOptions": {
        "instanceLimit": 1
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Frontend-v3: Stop",
      "type": "shell",
      "command": "pkill",
      "args": [
        "-f",
        "vite.*frontend-v3"
      ],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      }
    },
    {
      "label": "Backend: Stop",
      "type": "shell",
      "command": "pkill",
      "args": [
        "-f",
        "gradlew.*bootRun"
      ],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      }
    },
    {
      "label": "Backend: Build",
      "type": "shell",
      "command": "./scripts/build-backend.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$gradle",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Frontend: Build",
      "type": "shell",
      "command": "./scripts/build-frontend.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Build All Services",
      "type": "shell",
      "command": "./scripts/build-services.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "UI: Typecheck",
      "type": "shell",
      "command": "pnpm --filter @mirel/ui typecheck",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$tsc",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
  ]
}
