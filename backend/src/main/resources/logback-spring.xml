<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- 環境プロファイルによる切り替え -->
    
    <!-- Local環境: コンソール + 例外ファイル (ただしR2アップロードは無効) -->
    <springProfile name="local">
        <include resource="logback/appender-local.xml"/>
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="DEST_EXCEPTION"/>
        </root>
    </springProfile>

    <!-- Cloud (Prod/Dev) 環境: コンソールのみ (Cloud Logging連携) -->
    <springProfile name="!local">
        <include resource="logback/appender-cloud.xml"/>
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

</configuration>