<?xml version="1.0" encoding="UTF-8"?>
<included>
    <!-- コンソール出力 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 例外ログ (ローカルファイル保存のみ、アップロード無効) -->
    <appender name="DEST_EXCEPTION" class="jp.vemi.mirel.foundation.log.OneFilePerExceptionAppender">
        <directory>logs/exceptions</directory>
        <!-- useR2=false によりアップロードを無効化 -->
        <useR2>false</useR2>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n%ex</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- エラーログを例外ファイルにも流す -->
    <logger name="jp.vemi.mirel" level="ERROR" additivity="true">
        <appender-ref ref="DEST_EXCEPTION" />
    </logger>
    <logger name="jp.vemi.framework" level="ERROR" additivity="true">
        <appender-ref ref="DEST_EXCEPTION" />
    </logger>
</included>
