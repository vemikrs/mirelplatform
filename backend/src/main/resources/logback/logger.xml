<?xml version="1.0" encoding="UTF-8"?>
<included>
    <!--
        ログレベル設定は application.yml の logging.level で一元管理しています。
        このファイルではカスタムアペンダーとログルーティングのみを定義します。
        
        Note: application.yml の logging.level 設定はこのファイルの設定を上書きします。
        ログレベルを変更する場合は application.yml を編集してください。
    -->
    
    <!-- リクエストログ設定 -->
    <logger name="request" level="DEBUG" additivity="false">
        <appender-ref ref="REQUEST" />
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- 認証ログ設定 -->
    <logger name="auth" additivity="false">
        <appender-ref ref="AUTH" />
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- Mira AI ログ設定 -->
    <logger name="jp.vemi.mirel.apps.mira" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
</included>